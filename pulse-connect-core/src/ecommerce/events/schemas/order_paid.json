{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Order Paid Event",
  "type": "object",
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this event"
    },
    "event_type": {
      "type": "string",
      "enum": ["order_paid"],
      "description": "Type of event"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When the event occurred"
    },
    "trace_id": {
      "type": "string",
      "format": "uuid",
      "description": "Trace ID for request correlation"
    },
    "order_id": {
      "type": "string",
      "format": "uuid",
      "description": "ID of the paid order"
    },
    "transaction_id": {
      "type": "string",
      "format": "uuid",
      "description": "ID of the payment transaction"
    },
    "buyer_email": {
      "type": "string",
      "format": "email",
      "description": "Email of the buyer"
    },
    "gross_usd": {
      "type": "number",
      "minimum": 0,
      "description": "Gross payment amount in USD"
    },
    "fee_usd": {
      "type": "number",
      "minimum": 0,
      "description": "Transaction fee in USD"
    },
    "net_usd": {
      "type": "number",
      "minimum": 0,
      "description": "Net amount to sellers in USD"
    },
    "policy_version": {
      "type": "string",
      "description": "Version of the fee policy used"
    },
    "payment_method_id": {
      "type": "string",
      "description": "External payment method identifier"
    },
    "sellers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "seller_id": {
            "type": "string",
            "format": "uuid"
          },
          "amount_usd": {
            "type": "number",
            "minimum": 0
          }
        },
        "required": ["seller_id", "amount_usd"]
      },
      "description": "Seller payout amounts"
    }
  },
  "required": [
    "event_id",
    "event_type",
    "timestamp",
    "trace_id",
    "order_id",
    "transaction_id",
    "buyer_email",
    "gross_usd",
    "fee_usd",
    "net_usd",
    "policy_version",
    "payment_method_id",
    "sellers"
  ]
}
