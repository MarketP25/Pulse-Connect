// tsconfig.json
{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    // ← set baseUrl to project root:
    "baseUrl": ".",
    // ← map "@/…" → "<root>/src/…"
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
