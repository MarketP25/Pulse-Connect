{
  "compilerOptions": {
    /* Target modern browsers with ESNext features */
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],

    /* Preserve JSX for Next.js */
    "jsx": "preserve",

    /* Module resolution */
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Strict type-checking */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,

    /* Allow JS files alongside TS */
    "allowJs": true,

    /* Never emit; Next.js handles builds */
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,

    /* Path mapping for @/… → src/… */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@features/*": ["src/features/*"],
      "@hooks/*": ["src/hooks/*"],
      "@lib/*": ["src/lib/*"],
      "@services/*": ["src/services/*"],
      "@types/*": ["src/types/*"]
    },

    /* Next.js plugin */
    "plugins": [{ "name": "next" }],

    /* Include custom type roots so our NextAuth augmentation is picked up */
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "src/**/*"],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "**/node_modules/@ljharb/tsconfig/**",
    "**/node_modules/call-bound/**"
  ]
}
