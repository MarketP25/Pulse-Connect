{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@utils/*": ["src/utils/*"],
      "@pages/*": ["src/pages/*"],
      "@styles/*": ["src/styles/*"],
      "@services/*": ["src/services/*"],
      "@context/*": ["src/context/*"],
      "@config/*": ["src/config/*"],
      "@assets/*": ["public/assets/*"]
    }
  },
  "exclude": ["node_modules", "dist", ".next"]
}